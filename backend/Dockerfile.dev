# Jupyter Dockerfile (reuse backend codebase)
FROM python:3.10-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app

WORKDIR /app/backend

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python + Jupyter dependencies
COPY backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt jupyter

COPY backend/ .

EXPOSE 8888

CMD ["jupyter", "notebook", "--ip=0.0.0.0", "--port=8888", "--no-browser", "--allow-root", "--NotebookApp.token=dev", "--notebook-dir=/app/backend/notebooks"]
